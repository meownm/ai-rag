# .env.example
# Файл конфигурации для воркера. Используется скриптом start.ps1.

# --- КОНФИГУРАЦИЯ БАЗЫ ДАННЫХ ---
# Обязательная переменная. Замените на свои учетные данные.
POSTGRES_DSN="postgresql://botuser:botpass@127.0.0.1:5432/bot"

# Имена таблиц (Абстракция схемы - не трогайте, если не меняли схему БД)
DB_CHUNKS_TABLE="public.chunks"
DB_LOG_TABLE="public.worker_log"
DB_SETTINGS_TABLE="public.settings"

# --- КОНФИГУРАЦИЯ ВОРКЕРА ---
# WORKER_TYPE: 'gpu' (для CUDA/DirectML) или 'cpu'
WORKER_TYPE="gpu"

# WORKER_MODEL_TYPE: 'local_torch' (локальное выполнение) или 'remote_openai' (API-вызов)
WORKER_MODEL_TYPE="local_torch"

# WORKER_POOLING_METHOD: 'mean' (взвешенное среднее) или 'cls' (CLS-токен). Только для local_torch.
WORKER_POOLING_METHOD="mean"

# WORKER_BATCH_SIZE: Максимальный размер батча (адаптивный)
WORKER_BATCH_SIZE=64

# WORKER_POLL_INTERVAL: Интервал опроса БД в секундах
WORKER_POLL_INTERVAL=5

# --- КЛЮЧИ API (Только для remote_openai) ---
# OPENAI_API_KEY="sk-..."