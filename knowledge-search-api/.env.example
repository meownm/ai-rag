# .env.example for Knowledge Search API Service
#
# Это шаблон файла конфигурации.
# Обязательно отредактируйте .env и впишите ваши реальные данные.

# --- Настройки базы данных PostgreSQL ---
# Отсюда сервис будет читать чанки и эмбеддинги
# Сюда будет записываться история поиска
DB_HOST=localhost
DB_PORT=5432
DB_NAME=knowledge_db
DB_USER=postgres
DB_PASSWORD=your_secret_password

# --- Настройки графовой базы данных Neo4j ---
# Отсюда сервис будет читать граф знаний
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# --- Настройки LLM-сервера Ollama (для генерации ответов) ---
OLLAMA_URL=http://localhost:11434/api/generate
OLLAMA_MODEL=llama3

# --- Настройки модели для эмбеддингов ---
# Важно: эта модель должна быть той же, что и в сервисе парсера!
EMBEDDING_MODEL_NAME=mixedbread-ai/mxbai-embed-large-v1

# --- Настройки модели для переранжирования (reranking) ---
# Включить ли использование реранкера (true/false)
RERANKER_ENABLED=true
RERANKER_MODEL_NAME=mixedbread-ai/mxbai-rerank-large-v1