# --- PostgreSQL ---
POSTGRES_IMAGE=postgres:15-alpine
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password
POSTGRES_DB=ai_rag
POSTGRES_PORT=5432
# Путь до каталога на хост-машине для хранения данных PostgreSQL
POSTGRES_DATA_PATH=C:/ai-rag/data/postgres

# --- Keycloak ---
KEYCLOAK_IMAGE=quay.io/keycloak/keycloak:24.0.2
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
# Порт, на котором Keycloak будет доступен извне контейнера
KEYCLOAK_HTTP_PORT=8080
# Каталог для данных Keycloak (реалмы, конфигурация)
KEYCLOAK_DATA_PATH=C:/ai-rag/data/keycloak
# Имя реалма и клиентские данные для OIDC
KEYCLOAK_REALM=ai-rag
OIDC_CLIENT_ID=ai-rag-client
OIDC_CLIENT_SECRET=replace_me_with_secret
# Адрес OpenID Provider (OIDC Issuer)
OIDC_ISSUER_URI=http://localhost:8080/realms/ai-rag
# URI для обратного вызова после аутентификации
OIDC_REDIRECT_URI=http://localhost:3000/api/auth/callback
# URI для выхода из приложения
OIDC_LOGOUT_REDIRECT_URI=http://localhost:3000

# --- MinIO ---
MINIO_IMAGE=minio/minio:RELEASE.2024-05-28T23-31-54Z
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_REGION=eu-central-1
# API порт и порт веб-консоли
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
# Каталог на хосте для MinIO data
MINIO_DATA_PATH=C:/ai-rag/data/minio

